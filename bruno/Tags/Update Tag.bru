meta {
  name: Update Tag
  type: http
  seq: 1
}

put {
  url: {{baseUrl}}/api/tags/{{tagId}}
  body: json
  auth: inherit
}

body:json {
  {
    "label": "updated-{{$randomInt}}",
    "color": "#00AAFF"
  }
}

tests {
  test("should respond OK", function () {
    expect(res.getStatus()).to.equal(200);
  });

  test("content should change", function () {
    expect(res.getBody().color).to.equal("#00AAFF");
    expect(res.getBody().label).to.startWith("updated");
  });
}
