meta {
  name: Update Claim
  type: http
  seq: 3
}

put {
  url: {{baseUrl}}/api/claims/{{claimId}}
  body: json
  auth: inherit
}

body:json {
  {
    "title": "Updated Claim {{$randomInt}}",
    "description": "Updated",
    "status": "SUBMITTED",
