meta {
  name: Login (Reader)
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/auth/login
  body: json
  auth: inherit
}

body:json {
  {
    "username": "reader",
    "password": "reader-pass"
  }
}

script:post-response {
  const b = res.getBody();
  if (b && b.token) {
    bru.setVar("token", b.token);
  }
}

tests {
  test("should respond OK and set token", function () {
    expect(res.getStatus()).to.equal(200);
    const b = res.getBody();
    expect(!!b.token).to.be.true;
  });
}

